# Blockfrost Configuration
NEXT_PUBLIC_BLOCKFROST_PROJECT_ID=your_blockfrost_project_id_here
NEXT_PUBLIC_BLOCKFROST_URL=https://cardano-testnet.blockfrost.io/api/v0

# Cardano Network Configuration
NEXT_PUBLIC_CARDANO_NETWORK=testnet

# Smart Contract Addresses (Update with your deployed contracts)
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=your_nft_contract_address_here
NEXT_PUBLIC_TOKEN_CONTRACT_ADDRESS=your_token_contract_address_here
NEXT_PUBLIC_TRAIL_CONTRACT_ADDRESS=your_trail_contract_address_here

# IPFS Configuration (for NFT metadata storage)
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_PROJECT_ID=your_ipfs_project_id_here
IPFS_PROJECT_SECRET=your_ipfs_project_secret_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=VinTrek
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration (if using a database for off-chain data)
DATABASE_URL=your_database_url_here

# API Keys
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# AI Safety Features
# Get your free API key from: https://openweathermap.org/api
NEXT_PUBLIC_WEATHER_API_KEY=your_openweather_api_key_here

# Optional: Custom weather service endpoint
# NEXT_PUBLIC_WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Development Settings
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Demo Mode (for hackathon presentation)
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_MOCK_WEATHER_DATA=true
NEXT_PUBLIC_MOCK_CROWD_DATA=true

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
